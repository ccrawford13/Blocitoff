.container
  .col-md-8
    %h1= "#{current_user.first_name}'s Todo List"
    .col-md-8.col-md-offset-3
      .new-item
        = render partial: 'items/form', locals: { user: @user, items: @items }
      - if @items
      = javascript_include_tag "items"
        .js-items
          = render @items
        